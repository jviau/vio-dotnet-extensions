{
  "$schema": "http://json.schemastore.org/template",
  "author": "Jacob Viau",
  "classifications": [ "Repository" ], 
  "name": "Repository",
  "identity": "Vio.Dotnet.Templates.Repo",
  "groupIdentity":"Vio.Dotnet.Templates.Repo",
  "shortName": "repo",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Vio.Dotnet.Repo",
  "preferNameDirectory": true,
  "symbols":{
    "langVersion": {
      "type": "parameter",
      "datatype": "text",
      "description": "Sets the LangVersion property in the created project file.",
      "defaultValue": "8.0",
      "replaces": "$(ProjectLanguageVersion)"
    },
    "namespace": {
      "type": "parameter",
      "datatype": "text",
      "description": "Sets the root namespace for the repo."
    },
    "author": {
      "type": "parameter",
      "datatype": "text",
      "description": "Sets the author for this repo.",
      "replaces": "$(ProjectAuthor)",
      "defaultValue": "Author"
    }
  }
}
